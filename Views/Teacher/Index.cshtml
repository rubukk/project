@model IEnumerable<AuthSystem.Models.CourseGrade>

<h2>My Assigned Grades</h2>

<p>
    <a asp-action="AssignGrade" class="btn btn-primary">Assign New Grade</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Course</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.CourseName</td>
                <td>@item.Grade</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>