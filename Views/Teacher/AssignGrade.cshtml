@model AuthSystem.Models.CourseGrade

<h2>Assign New Grade</h2>

<form asp-action="AssignGrade">
    <div class="form-group">
        <label asp-for="UserId">Student</label>
        <select asp-for="UserId" class="form-control">
            @foreach (var student in ViewBag.Students)
            {
                <option value="@student.Id">@student.FirstName @student.LastName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CourseName">Course Name</label>
        <input asp-for="CourseName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Grade">Grade</label>
        <input asp-for="Grade" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Assign Grade</button>
</form>